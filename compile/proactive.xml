			<arg value="${base}/src/org/objectweb/proactive/doc-files/guided_tour/dining_philosophers.html"/>
			<arg value="${base}/src/org/objectweb/proactive/doc-files/guided_tour/parallel_processing.html"/>
			<arg value="${base}/src/org/objectweb/proactive/doc-files/guided_tour/c3d.html"/>
			<arg value="${base}/src/org/objectweb/proactive/doc-files/guided_tour/migration.html"/>
			<arg value="${base}/src/org/objectweb/proactive/doc-files/guided_tour/mobile_agents.html"/>
			<arg value="${base}/src/org/objectweb/proactive/doc-files/guided_tour/OOSPMDJacobiexample.html"/>
