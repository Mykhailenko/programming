<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www-sop.inria.fr/oasis/ProActive/DescriptorSchema.xsd">
	<virtualNodes>
		<virtualNode name="OutputListener" property="unique"/>
		<virtualNode name="NumberSource" property="unique"/>
		<virtualNode name="Containers" property="multiple"/>
	</virtualNodes>
	<deployment>
		<mapping>
			<map virtualNode="OutputListener">
				<jvmSet>
					<vmName value="Jvm3"/>
				</jvmSet>
			</map>
			<map virtualNode="NumberSource">
				<jvmSet>
					<vmName value="Jvm1"/>
				</jvmSet>
			</map>
			<map virtualNode="Containers">
				<jvmSet>
					<vmName value="Jvm1"/>
					<vmName value="Jvm2"/>
					<vmName value="Jvm3"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="Jvm1">
				<acquisition method="rmi"/>
				<creation>
					<processReference refid="linuxJVM"/>
				</creation>
			</jvm>
			<jvm name="Jvm2">
				<acquisition method="rmi"/>
				<creation>
					<processReference refid="linuxJVM"/>
				</creation>
			</jvm>
			<jvm name="Jvm3">
				<acquisition method="rmi"/>
				<creation>
					<processReference refid="linuxJVM"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="linuxJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess"/>
<!--  				<policyFile>
				   <path type="fromClasspath" value="proactive.java.policy"/>
				</policyFile> -->
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
