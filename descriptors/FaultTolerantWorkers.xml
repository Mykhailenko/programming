<?xml version="1.0" encoding="UTF-8"?>
<!-- HOSTNAMES MUST BE SET BEFORE USING THIS FAULT-TOLERANT DESCRIPTOR -->
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="DescriptorSchema.xsd">
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="Workers" property="multiple" ftServiceId="appli"/>
			<virtualNode name="Failed" property="multiple" ftServiceId="ressource"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="Workers">
				<jvmSet>
					<vmName value="Jvm1"/>
					<vmName value="Jvm2"/>
					<vmName value="Jvm3"/>
					<vmName value="Jvm4"/>
				</jvmSet>
			</map>
			<map virtualNode="Failed">
				<jvmSet>
					<vmName value="JvmS1"/>
					<vmName value="JvmS2"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="Jvm1">
				<creation>
					<processReference refid="jvmAppli1"/>
				</creation>
			</jvm>
			<jvm name="Jvm2">
				<creation>
					<processReference refid="jvmAppli2"/>
				</creation>
			</jvm>
			<jvm name="Jvm3">
				<creation>
					<processReference refid="jvmAppli3"/>
				</creation>
			</jvm>
			<jvm name="Jvm4">
				<creation>
					<processReference refid="jvmAppli4"/>
				</creation>
			</jvm>
			<jvm name="JvmS1">
				<creation>
					<processReference refid="jvmFailed1"/>
				</creation>
			</jvm>
			<jvm name="JvmS2">
				<creation>
					<processReference refid="jvmFailed2"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="jvmProcess">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
				</jvmProcess>
			</processDefinition>
			<!-- HOSTNAMES MUST BE SET HERE -->
			<processDefinition id="jvmAppli1">
				<rshProcess class="org.objectweb.proactive.core.process.rsh.RSHJVMProcess" hostname="psychoquack">
					<processReference refid="jvmProcess"/>
				</rshProcess>
			</processDefinition>
			<processDefinition id="jvmAppli2">
				<rshProcess class="org.objectweb.proactive.core.process.rsh.RSHJVMProcess" hostname="noadcoco">
					<processReference refid="jvmProcess"/>
				</rshProcess>
			</processDefinition>
			<processDefinition id="jvmAppli3">
				<rshProcess class="org.objectweb.proactive.core.process.rsh.RSHJVMProcess" hostname="nahuel">
					<processReference refid="jvmProcess"/>
				</rshProcess>
			</processDefinition>
			<processDefinition id="jvmAppli4">
				<rshProcess class="org.objectweb.proactive.core.process.rsh.RSHJVMProcess" hostname="nahuel">
					<processReference refid="jvmProcess"/>
				</rshProcess>
			</processDefinition>
			<processDefinition id="jvmFailed1">
				<rshProcess class="org.objectweb.proactive.core.process.rsh.RSHJVMProcess" hostname="apple">
					<processReference refid="jvmProcess"/>
				</rshProcess>
			</processDefinition>
			<processDefinition id="jvmFailed2">
				<rshProcess class="org.objectweb.proactive.core.process.rsh.RSHJVMProcess" hostname="amda">
					<processReference refid="jvmProcess"/>
				</rshProcess>
			</processDefinition>
		</processes>
		<services>
			<serviceDefinition id="appli">
				<faultTolerance>
					<globalServer url="rmi://trinidad:1100/FTServer"></globalServer>
					<ttc value="5"></ttc>
				</faultTolerance>
			</serviceDefinition>

			<serviceDefinition id="ressource">
				<faultTolerance>
					<globalServer url="rmi://trinidad:1100/FTServer"></globalServer>
					<resourceServer url="rmi://trinidad:1100/FTServer"></resourceServer>
					<ttc value="5"></ttc>
				</faultTolerance>
			</serviceDefinition>
		</services>
	</infrastructure>
</ProActiveDescriptor>
