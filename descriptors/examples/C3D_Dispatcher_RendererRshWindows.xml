<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www-sop.inria.fr/oasis/ProActive/DescriptorSchema.xsd">
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="Dispatcher" property="unique_singleAO"/>
			<virtualNode name="Renderer"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<register virtualNode="Dispatcher" protocol="rmi"/>
		<mapping>
			<map virtualNode="Dispatcher">
				<jvmSet>
					<currentJVM protocol="rmi"/>
				</jvmSet>
			</map>
			<map virtualNode="Renderer">
				<jvmSet>
					<vmName value="Jvm1"/>
					<vmName value="Jvm2"/>
					<vmName value="Jvm3"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="Jvm1">
				<acquisition method="rmi"/>
				<creation>
					<processReference refid="rshProcess"/>
				</creation>
			</jvm>
			<jvm name="Jvm2">
				<acquisition method="rmi"/>
				<creation>
					<processReference refid="rshProcess"/>
				</creation>
			</jvm>
			<jvm name="Jvm3">
				<acquisition method="rmi"/>
				<creation>
					<processReference refid="rshProcess"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="linuxJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess"/>
			</processDefinition>
			<processDefinition id="linuxJVM1">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<classpath>
						<absolutePath type="absolute" value="Z\ProActive\classes"/>
						<absolutePath type="absolute" value="Z\ProActive\lib\bcel.jar"/>
						<absolutePath type="absolute" value="Z\ProActive\lib\asm.jar"/>
						<absolutePath type="absolute" value="Z\ProActive\lib\jini-core.jar"/>
						<absolutePath type="absolute" value="Z\ProActive\lib\jini-ext.jar"/>
						<absolutePath type="absolute" value="Z\ProActive\lib\reggie.jar"/>
					</classpath>
					<javaPath>
						<absolutePath type="absolute" value="D:\java\j2sdk1.4.0\bin\java"/>
					</javaPath>
					<policyFile>
						<absolutePath type="absolute" value="Z:\ProActive\scripts\windows\proactive.java.policy"/>
					</policyFile>
				</jvmProcess>
			</processDefinition>
			<processDefinition id="rshProcess">
				<rshProcess class="org.objectweb.proactive.core.process.rsh.RSHProcess" hostname="palliata.inria.fr">
					<processReference refid="linuxJVM1"/>
				</rshProcess>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
