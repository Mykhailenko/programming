<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www-sop.inria.fr/oasis/ProActive/DescriptorSchema.xsd">
	<virtualNodes>
		<virtualNode name="Dispatcher" property="unique"/>
		<virtualNode name="Renderer" property="multiple"/>
	</virtualNodes>
	<deployment>
		<mapping>
			<map virtualNode="Dispatcher">
				<jvmSet>
					<vmName value="currentJvm"/>
				</jvmSet>
			</map>
			<map virtualNode="Renderer">
				<jvmSet>
					<vmName value="jvmClusterInria"/>
				</jvmSet>
			</map>
		</mapping>

		<jvms>
			<jvm name="currentJvm">
				<acquisition method="rmi"/>
				<creation>
					<processReference refid="linuxJVM"/>
				</creation>
			</jvm>
			<jvm name="jvmClusterInria">
				<acquisition method="rmi"/>
				<creation>
					<processReference refid="sshInriaCluster"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="linuxJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess"/>
			</processDefinition>
			<processDefinition id="linuxJVM1">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<classpath>
						<absolutePath type="absolute" value="/net/home/rquilici/ProActive/classes"/>
					</classpath>	
					<javaPath>
						<absolutePath type="absolute" value="/usr/local/jdk1.4.0/bin/java"/>
					</javaPath>
					<policyFile>
						<absolutePath type="absolute" value="/net/home/rquilici/ProActive/scripts/unix/proactive.java.policy"/>
					</policyFile>
				</jvmProcess>
			</processDefinition>
			<processDefinition id="bsubInriaCluster">
				<bsubProcess class="org.objectweb.proactive.core.process.lsf.LSFBSubProcess">
					<processReference refid="linuxJVM1"/>
					<bsubOption>
						<processor>4</processor>
						<scriptPath>
							<absolutePath type="absolute" value="/net/home/rquilici/ProActive/scripts/unix/cluster/startRuntime.sh"/>
						</scriptPath>
					</bsubOption>
				</bsubProcess>
			</processDefinition>
			<processDefinition id="sshInriaCluster">
				<sshProcess class="org.objectweb.proactive.core.process.ssh.SSHProcess" hostname="galere1.inria.fr">
					<processReference refid="bsubInriaCluster"/>
				</sshProcess>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
