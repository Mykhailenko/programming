<?xml version="1.0" encoding="UTF-8"?>
<GCMApplication xmlns="urn:gcm:application:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:application:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ApplicationDescriptorSchema.xsd">

    <environment>
    	<descriptorVariable name="descriptor.dir" value=""/>
        <descriptorVariable name="deployment.gcmd" value="${descriptor.dir}/gcmd.mpiXXX.xml"/>
        <descriptorVariable name="mpi.cmd" value=""/>
        <descriptorVariable name="mpi.args" value=""/>
    </environment>

    <application>
        <mpi>
              <command name="${mpi.cmd} ${mpi.args}" />
              <nodeProvider refid="LAN_MPI" />
        </mpi>
    </application>
    					
    <resources>
	    <nodeProvider id="LAN_MPI">
		     <file path="${deployment.gcmd}" />
        </nodeProvider>
    </resources>
        	
</GCMApplication>
