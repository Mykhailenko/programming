# the default logging level is INFO

log4j.rootLogger=INFO, A1

#A1 uses PatternLayout
#and displays the associated message (%m)
#using the platform dependant separator (%n)
#Use %M for method names
#see log4j documentation for details

log4j.appender.A1=org.apache.log4j.ConsoleAppender
log4j.appender.A1.layout=org.apache.log4j.PatternLayout
log4j.appender.A1.layout.ConversionPattern=%m %n


########### Change here default logging level on a 
########### per-logger basis
########### usage is log4j.logger.className=Level, Appender
log4j.logger.org.objectweb.proactive.core.runtime.RuntimeFactory=INFO,A1
log4j.logger.org.objectweb.proactive.core.descriptor.data.VirtualNode=INFO,A1
log4j.logger.org.objectweb.proactive.core.runtime.RuntimeFactory=INFO,A1
log4j.logger.org.objectweb.proactive.core.process.UniversalProcess=INFO,A1
log4j.logger.org.objectweb.proactive.core.process.AbstractUniversalProcess=INFO,A1
log4j.logger.org.objectweb.proactive.core.runtime.StartRuntime=INFO,A1
log4j.logger.org.objectweb.proactive.core.descriptor.data.VirtualNode=INFO,A1
log4j.logger.org.objectweb.proactive.core.node.NodeFactory=INFO,A1
log4j.logger.org.objectweb.proactive.core.runtime.ibis.RemoteRuntimeFactory=INFO,A1
log4j.logger.org.objectweb.proactive.core.body.HalfBody=INFO,A1
log4j.logger.org.objectweb.proactive.core.body.request.RequestImpl=INFO,A1
