<?xml version="1.0" encoding="UTF-8"?>

<GCMApplication xmlns="http://www-sop.inria.fr/oasis/ProActive/schemas/ApplicationDescriptorSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www-sop.inria.fr/oasis/ProActive/schemas/ApplicationDescriptorSchema ../schema/ApplicationDescriptorSchema.xsd">

	<!-- Regle integrite:
		- un fichier ne peut se trouver que dans un seul bloc ressourceAcquisition
		- un virtual node peut referencer plusieurs RA
			Avant d'activer un RA
	-->
	<ressourceProvider id="INRIA_CLUSTERS">
		<file path="deployment2.xml" />
		<file path="deployment3.xml" />
	</ressourceProvider>

	<ressourceProvider id="INRIA_LAN">
		<file path="deployment.xml" />
	</ressourceProvider>


	<ProActive>
		<virtualNode id="master" capacity="1">
			<resourceProvider refid="INRIA_LAN" />
		</virtualNode>

		<virtualNode id="slaves" capacity="max">
			<resourceProvider refid="INRIA_LAN" />
			<resourceProvider refid="INRIA_CLUSTERS" />
		</virtualNode>

		<virtualNode id="slaves2" capacity="max">
			<resourceProvider refid="INRIA_LAN" />
			<resourceProvider refid="INRIA_CLUSTERS" />
		</virtualNode>

	</ProActive>

</GCMApplication>
