<?xml version="1.0" encoding="UTF-8"?>


<!-- 
    Une application composee deux virtualNodes
        VN1 => cap=12
        VN2 => tout ce qui reste disponible
-->    
<GCMApplication
	xmlns="http://www-sop.inria.fr/oasis/ProActive/schemas/ApplicationDescriptorSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www-sop.inria.fr/oasis/ProActive/schemas/ApplicationDescriptorSchema ../schema/ApplicationDescriptorSchema.xsd">
    <ressourceAllocator id="RA" descriptor="INRIA_LAN.xml">
        <ProActive name="proactive"/> 
    </ressourceAllocator>   
    
    <application>
        <virtualNode name="VN1" raref="RA" capacity="12"/>
        <virtualNode name="VN2" raref="RA" capacity="max"/>
    </application>
</GCMApplication>    

