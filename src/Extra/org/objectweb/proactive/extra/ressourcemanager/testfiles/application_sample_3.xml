<?xml version="1.0" encoding="UTF-8"?>

<!-- 
    Execute le script scripts/killProActive.sh par rapport a la racine utilisateur
    
    Le repertoire scripts killProActive.sh est transfere automatiquement avant l'execution
-->
<GCMApplication
	xmlns="http://www-sop.inria.fr/oasis/ProActive/schemas/ApplicationDescriptorSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www-sop.inria.fr/oasis/ProActive/schemas/ApplicationDescriptorSchema ../schema/ApplicationDescriptorSchema.xsd">
    <ressourceAllocator descriptor="INRIA_LAN.xml">
        <fileTransfer>
            <source path="scripts/"  />
            <dest    relpath="scripts"/>
        </fileTransfer>
        
        <Executable relpath="scripts/killProActive.sh" />
    </ressourceAllocator>
</GCMApplication>
