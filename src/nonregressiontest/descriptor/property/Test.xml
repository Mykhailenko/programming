<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../descriptors/DescriptorSchema.xsd">

	<variables>
		<property name="phenri" value="/usr/phenri/home" type="constant"/>
		<property name="game" value="/lisa/sims" type="overridableInXML"/>
		<property name="proac_home" value="" type="setInProgram"/>
		<property name="test_dir" value="${proac_home}" type="constant"/>
		<property name="userName" value="user.name" type="javaProperty"/>
	</variables>
		
		<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="NodeTest"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="NodeTest">
				<jvmSet>
					<vmName value="JvmNode"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="JvmNode">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="localJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
				   <jvmParameters>
					     <parameter value="-Duser_dir=test${phenri}/ProActive"/>
						 <parameter value="-Dtest_proac=${proac_home}"/>
					     <parameter value="-Dlisa.game=${phenri}${game}"/>
					     <parameter value="-Dlib.home=${phenri}/bin"/>
					     <parameter value="-Dtest_user_d=${userName}/toto"/>
					</jvmParameters> 
				</jvmProcess>
			</processDefinition>
			
		</processes>
	</infrastructure>
</ProActiveDescriptor>
