<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www-sop.inria.fr/oasis/proactive/schema/DescriptorSchema.xsd">
	<!-- <security file="../../descriptors/c3dPolicy.xml"></security> -->
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="VN" property="multiple"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="VN">
				<jvmSet>
					<vmName value="Jvm1"/>
					<vmName value="Jvm2"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="Jvm1">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
			<jvm name="Jvm2">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="localJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess"></jvmProcess>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
